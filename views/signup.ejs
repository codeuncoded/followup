<% include partials/header.ejs %>

<div class="container">
    <form action="/" method="post">
        <div class="form-group">
            <label for="exampleInputEmail1">Phone</label>
            <input type="text" class="form-control" id="number" name="number" aria-describedby="emailHelp" placeholder="918500878787">
            <small id="emailHelp" class="form-text text-muted">We'll never share your phone number with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect2">Select Level</label>
            <select class="form-control" id="exampleFormControlSelect2" name="level">
                <option value="basic">Basic</option>
                <option value="standard">Standard</option>
                <option value="advancedAsync">James Bond</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

